  .set CTRL_M_BIT, (1 << 0)

  .macro __replace_entry, el


  cbz x3, .L1_\@



  dc civac, x0
  dsb nsh


  mrs x8, sctlr_el\el
  bic x9, x8, #CTRL_M_BIT
  msr sctlr_el\el, x9
  isb


  str x1, [x0]



  dmb sy
  dc ivac, x0


  lsr x2, x2, #12
  .if \el == 1
  tlbi vaae1, x2
  .else
  tlbi vae\el, x2
  .endif
  dsb nsh


  msr sctlr_el\el, x8
  isb
  b .L2_\@

.L1_\@:

  str xzr, [x0]
  dsb nshst


  lsr x2, x2, #12
  .if \el == 1
  tlbi vaae1, x2
  .else
  tlbi vae\el, x2
  .endif
  dsb nsh


  str x1, [x0]
  dsb nshst

.L2_\@:
  .endm



  .balign 0x200







